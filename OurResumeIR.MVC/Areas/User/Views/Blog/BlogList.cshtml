@using OurResumeIR.Application.ViewModels.Blog
@model List<BlogPostListViewModel>
@{
    Layout = "_ProfileLayout";
    ViewBag.Title = "مقالات";
}


<div class="col-xl-9">
    <div class="row mb-3">
        <div class="col-12 d-sm-flex justify-content-between align-items-center">
          
            <a class="btn btn-success btn-sm" asp-action="AddBlog" asp-controller="Blog" asp-area="User">افزودن مقاله</a>

        </div>
    </div>

 

  
 
    

    <div class="card bg-transparent border rounded-3">
        <div class="card-header bg-transparent border-bottom">
            <h3 class="mb-0 fs-5 ff-vb">لیست @ViewBag.Title من</h3>
        </div>
        <!-- پیام موفقیت یا خطا -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
            </div>
        }

        <div class="card-body">

            <!-- لیست جدول مقالات -->
            <div class="table-responsive border-0">
                <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
                    <thead>
                        <tr>
                            <th scope="col" class="border-0 rounded-start">تصویر</th>
                            <th scope="col" class="border-0">عنوان</th>
                            <th scope="col" class="border-0 rounded-end">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/images/blog/@item.ImageName"
                                         alt="@item.Title"
                                         class="img-fluid rounded"
                                         style="max-height: 60px; max-width: 100px;" />
                                </td>
                                <td>
                                    <h6 class="mb-0">@item.Title</h6>
                                </td>
                         
                                <td>
                                    <a asp-area="User" asp-action="EditBlog" asp-controller="Blog" asp-route-id="@item.Id" class="btn btn-warning btn-sm">ویرایش</a>
                                    <form asp-area="User" asp-action="DeleteBlog" asp-controller="Blog" asp-route-id="@item.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('آیا از حذف اطمینان دارید؟')">حذف</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
